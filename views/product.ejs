<style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
    }
  
    .container {
      max-width: 800px;
      margin: 40px auto;
      padding: 20px;
      background-color: #f9f9f9;
      border: 1px solid #ddd;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      animation: fadeIn 1s;
    }
  
    .product-info {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }
  
    .product-info img {
      width: 400px;
      height: 400px;
      margin: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
  
    .product-info .details {
      width: 400px;
      margin: 20px;
    }
  
    .product-info .details h1 {
      font-size: 36px;
      margin-bottom: 20px;
    }
  
    .product-info .details p {
      font-size: 18px;
      margin-bottom: 20px;
    }
  
    .product-info .details .price {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 20px;
    }
  
    .btn-primary {
      background-color: #007bff;
      color: #ffffff;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      animation: pulse 1s infinite;
    }
  
    .btn-primary:hover {
      background-color: #0056b3;
    }
  
    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
  
    @keyframes pulse {
      0% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.1);
      }
      100% {
        transform: scale(1);
      }
    }
  </style>
  
  <%- include('partials/header') %>
  <div class="container">
    <div class="product-info">
      <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
      <div class="details">
        <h1><%= product.name %></h1>
        <p><%= product.description %></p>
        <p class="price">Price: <%= product.price %></p>
        <button class="btn btn-primary">Add to Cart</button>
      </div>
    </div>
  </div>
  <%- include('partials/footer') %>